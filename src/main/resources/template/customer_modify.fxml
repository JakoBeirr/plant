<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.boomkwekerij.plant.view.controller.CustomerModifyController">

    <ScrollPane prefHeight="200.0" prefWidth="320.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox styleClass="center-pane" spacing="5">
            <Label styleClass="paneTitle" text="Klant Bewerken"/>

            <VBox spacing="5">
                <TextField fx:id="searchField" promptText="Zoeken..."/>

                <TableView fx:id="customerList" fixedCellSize="25" prefHeight="150">
                    <columns>
                        <TableColumn fx:id="name1" text="Naam 1" prefWidth="200">
                            <cellValueFactory>
                                <PropertyValueFactory property="name1" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="name2" text="Naam 2" prefWidth="200">
                            <cellValueFactory>
                                <PropertyValueFactory property="name2" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="address1" text="Adres" prefWidth="250">
                            <cellValueFactory>
                                <PropertyValueFactory property="address1" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="postalCode" text="Postcode" prefWidth="75">
                            <cellValueFactory>
                                <PropertyValueFactory property="postalCode" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="residence" text="Woonplaats" prefWidth="150">
                            <cellValueFactory>
                                <PropertyValueFactory property="residence" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="country" text="Land" prefWidth="50">
                            <cellValueFactory>
                                <PropertyValueFactory property="country" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="telephone" text="Telefoon" prefWidth="100">
                            <cellValueFactory>
                                <PropertyValueFactory property="telephone" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="btwNumber" text="BTW nummer" prefWidth="150">
                            <cellValueFactory>
                                <PropertyValueFactory property="btwNumber" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>

                <Button fx:id="showModifyButton" mnemonicParsing="false" text="Bewerken" onAction="#showModify" visible="false" styleClass="blue-button" />

                <GridPane fx:id="modifyPane" visible="false" hgap="10" vgap="5" styleClass="modifyPane">
                    <Label id="labelName1" text="Naam 1*:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="name1Field" prefColumnCount="30" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label id="labelName2" text="Naam 2:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="name2Field" prefColumnCount="30" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label id="labelAddress1" text="Adres 1*:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="address1Field" prefColumnCount="30" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label id="labelAddress2" text="Adres 2:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="address2Field" prefColumnCount="30" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label id="labelPostalCode" text="Postcode*:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextField fx:id="postalCodeField" prefColumnCount="30" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label id="labelResidence" text="Woonplaats*:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <TextField fx:id="residenceField" prefColumnCount="30" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <Label id="labelCountry" text="Land*:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    <TextField fx:id="countryField" prefColumnCount="30" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                    <Label id="labelTelephone" text="Telefoon:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                    <TextField fx:id="telephoneField" prefColumnCount="30" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                    <Label id="labelGsm" text="GSM:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                    <TextField fx:id="gsmField" prefColumnCount="30" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

                    <Label id="labelFax" text="Fax:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
                    <TextField fx:id="faxField" prefColumnCount="30" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

                    <Label id="labelBtwNumber" text="BTW nummer*:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
                    <TextField fx:id="btwNumberField" prefColumnCount="30" GridPane.rowIndex="10" GridPane.columnIndex="1"/>

                    <Label id="labelEmailAddress" text="E-mailadres:" GridPane.rowIndex="11" GridPane.columnIndex="0"/>
                    <TextField fx:id="emailAddressField" prefColumnCount="30" GridPane.rowIndex="11" GridPane.columnIndex="1"/>

                    <Label id="labelEmptyRow" text="" GridPane.rowIndex="12" />

                    <Button id="modifyButton" mnemonicParsing="false" onMouseClicked="#modifyCustomer" text="Klant bewerken" styleClass="green-button" GridPane.rowIndex="13" GridPane.columnIndex="0"/>
                </GridPane>
            </VBox>
        </VBox>
    </ScrollPane>
</AnchorPane>