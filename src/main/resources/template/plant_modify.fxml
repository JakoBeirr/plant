<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.boomkwekerij.plant.view.controller.PlantModifyController">

    <ScrollPane prefHeight="200.0" prefWidth="320.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox styleClass="center-pane" spacing="5">
            <Label styleClass="paneTitle" text="Plant Bewerken"/>

            <TextField fx:id="searchField" promptText="Zoeken..."/>

            <TableView fx:id="plantList" fixedCellSize="25" prefHeight="150">
                <columns>
                    <TableColumn fx:id="name" text="Naam" prefWidth="200">
                        <cellValueFactory>
                            <PropertyValueFactory property="name" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="age" text="Leeftijd" prefWidth="125">
                        <cellValueFactory>
                            <PropertyValueFactory property="age" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="measure" text="Maat" prefWidth="125">
                        <cellValueFactory>
                            <PropertyValueFactory property="measure" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="price" text="Prijs" prefWidth="73">
                        <cellValueFactory>
                            <PropertyValueFactory property="price" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>

            <Button fx:id="showModifyButton" mnemonicParsing="false" text="Bewerken" onAction="#showModify" visible="false" styleClass="blue-button" />

            <GridPane fx:id="modifyPane" hgap="10" vgap="5" visible="false" styleClass="modifyPane">
                <Label id="labelName" text="Naam*:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" prefColumnCount="30" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label id="labelAge" text="Leeftijd*:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="ageField" prefColumnCount="30" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label id="labelMeasure" text="Maat*:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="measureField" prefColumnCount="30" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label id="labelPrice" text="Prijs*:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="priceField" prefColumnCount="30" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label id="labelRow" text="" GridPane.rowIndex="4"/>

                <Button id="modifyButton" mnemonicParsing="false" onMouseClicked="#modifyPlant" text="Plant bewerken" styleClass="green-button" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            </GridPane>
        </VBox>
    </ScrollPane>
</AnchorPane>